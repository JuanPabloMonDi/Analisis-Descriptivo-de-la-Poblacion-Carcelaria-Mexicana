gg <- ggplot(data = acm$var$eta2, aes(x = !!sym("Dim 2"), y = !!sym("Dim 3"), label = rownames(acm$var$eta2), text = rownames(acm$var$eta2))) +
  geom_point(size=0.75, shape=75, colour="blue3") +  # Añadir los puntos
